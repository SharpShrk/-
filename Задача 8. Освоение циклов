using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Задача_8.Освоение_циклов
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int iterationCount;
            string userInput;

            Console.WriteLine("Введите текст, который вы хотите повторить:");
            userInput = Console.ReadLine();
            Console.WriteLine("Сколько раз вы хотите повторить введенный текст?");
            iterationCount = Convert.ToInt32(Console.ReadLine());

            for (int i = 0; i < iterationCount; i++) 
            { 
                Console.WriteLine(userInput); 
            }         
        }
    }
}
