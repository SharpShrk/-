using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Задача_11.Сумма_чисел
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int number;
            int minRandomNumber = 0;
            int maxRandomNumber = 101;
            int multiplicity1 = 3;
            int multiplicity2 = 5;
            int sumMultiplicity = 0;
            Random rand = new Random();

            number = rand.Next(minRandomNumber, maxRandomNumber);

            for (int i = 0; i <= number; i++)
            {
                if (i % multiplicity1 == 0 || i % multiplicity2 == 0)
                {
                    sumMultiplicity += i;
                }
            }

            Console.WriteLine("Сгенерированное случайное число: " + number);
            Console.WriteLine("Сумма чисел кратных 3 и 5 равна: " + sumMultiplicity);
        }
    }
}
